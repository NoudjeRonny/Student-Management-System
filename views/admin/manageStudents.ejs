    <!-- Table Container -->
    <div class="table-container">
        <table class="student-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="studentTableBody">
                <% students.forEach((student, index) => { %>
                    <tr class="student-row">
                        <td><%= index + 1 %></td>
                        <td>
                        <img src="/images/students/<%= student.image %>" width="60" height="60">
                        </td>
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td class="actions">
